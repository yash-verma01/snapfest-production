# ============================================
# SNAPFEST FRONTEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# For local development, copy to .env.local
# ============================================
# Note: All frontend env vars must start with VITE_

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL (without trailing slash)
VITE_API_BASE_URL=http://localhost:5001/api

# ============================================
# CLERK AUTHENTICATION
# ============================================
# Get from https://dashboard.clerk.com -> API Keys
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx

# ============================================
# RAZORPAY PAYMENT GATEWAY
# ============================================
# Get from https://dashboard.razorpay.com -> Settings -> API Keys
# Use the KEY ID (not secret) for frontend
VITE_RAZORPAY_KEY_ID=rzp_test_xxxxx

# ============================================
# GOOGLE MAPS (Optional)
# ============================================
# Get from https://console.cloud.google.com -> APIs & Services -> Credentials
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

