# ============================================
# SNAPFEST BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# For local development, copy to .env.local
# ============================================

# Server Configuration
PORT=5001
NODE_ENV=development  # development | production

# ============================================
# DATABASE
# ============================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/snapfest

# MongoDB Atlas (uncomment for cloud DB)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/snapfest

# Azure Cosmos DB (for production)
# MONGODB_URI=mongodb://account:key@account.mongo.cosmos.azure.com:10255/snapfest?ssl=true&replicaSet=globaldb

# ============================================
# CORS - FRONTEND URLs
# ============================================
# Primary frontend URL
FRONTEND_URL=http://localhost:5173

# Additional allowed origins (comma-separated, no spaces after comma)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Backend URL (for generating public URLs for uploads)
BACKEND_URL=http://localhost:5001

# ============================================
# CLERK AUTHENTICATION
# ============================================
# Get from https://dashboard.clerk.com -> API Keys
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Legacy (optional)
CLERK_PUBLISHABLE_KEY_USER=pk_test_xxxxx
CLERK_SECRET_KEY_USER=sk_test_xxxxx

# ============================================
# RAZORPAY PAYMENT GATEWAY
# ============================================
# Get from https://dashboard.razorpay.com -> Settings -> API Keys
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=xxxxx

# ============================================
# SENDGRID EMAIL SERVICE
# ============================================
# Get from https://app.sendgrid.com -> Settings -> API Keys
SENDGRID_API_KEY=SG.xxxxx
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=SNAPFEST

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_EMAILS=admin@yourdomain.com

# ============================================
# JWT (Legacy - for backward compatibility)
# ============================================
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=7d

# ============================================
# AZURE BLOB STORAGE (for image uploads)
# ============================================
# Get connection string from Azure Portal -> Storage Account -> Access Keys
# Format: DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=snapfeststorage;AccountKey=xxxxx;EndpointSuffix=core.windows.net

# Container name for uploads (default: uploads)
AZURE_STORAGE_CONTAINER_NAME=uploads

# Storage account name (optional, used for URL generation)
AZURE_STORAGE_ACCOUNT_NAME=snapfeststorage

# Storage account URL (optional, auto-generated if account name is provided)
# Format: https://accountname.blob.core.windows.net
AZURE_STORAGE_ACCOUNT_URL=https://snapfeststorage.blob.core.windows.net

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info  # debug | info | warn | error

